<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:background="@color/backgroundapp"
        app:cardCornerRadius="20dp"
        app:cardUseCompatPadding="false"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/delete_sanPham"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/icon_x"
                android:layout_margin="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <ImageView
                android:id="@+id/iamgeView_AnhSanPhamInGioHang"
                android:layout_width="100dp"
                android:layout_height="140dp"
                android:layout_margin="6dp"
                android:src="@drawable/imagehome"
                app:layout_constraintTop_toBottomOf="@+id/delete_sanPham"
                app:layout_constraintStart_toStartOf="parent"
                />


            <LinearLayout
                android:id="@+id/linear_ThongTinSanPhamInXacNhanMua"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="6dp"
                android:orientation="vertical"
                android:background="@color/backgroundapp"
                app:layout_constraintStart_toEndOf="@+id/iamgeView_AnhSanPhamInGioHang"
                app:layout_constraintTop_toTopOf="@+id/iamgeView_AnhSanPhamInGioHang"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="16dp"
                >

                <TextView
                    android:id="@+id/textView_TenSanPhamInGioHang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Áo phông Jujutsu kaishen"
                    android:textColor="@color/black"
                    android:textSize="28dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Màu sắc: "
                        android:textSize="24dp" />

                    <TextView
                        android:id="@+id/textView_MauSacInGioHang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đen"
                        android:textSize="24dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kích cỡ: "
                        android:textSize="24dp" />

                    <TextView
                        android:id="@+id/textView_KichCoInGioHang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đen"
                        android:textSize="24dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView_GiaInGioHang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="200000"
                        android:textColor="@color/black"
                        android:textSize="26dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:text="Đ"
                        android:textColor="@color/black"
                        android:textSize="26dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginBottom="12dp"
                    >
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/image_tangSoLuong"
                        android:src="@drawable/tang"
                        android:layout_marginEnd="6dp"
                        />
                    <EditText
                        android:gravity="center"
                        android:id="@+id/edit_soLuong"
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:background="@color/white"
                        android:focusable="false"
                        android:clickable="false"
                        />

                    <ImageView
                        android:layout_marginStart="6dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/image_giamSoLuong"
                        android:src="@drawable/giam"
                        />
                </LinearLayout>


            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>