<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_item_recycle"
    android:layout_marginHorizontal="12dp"
    android:padding="8dp"
    android:layout_marginVertical="8dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cardCornerRadius="18dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_itemSanPhamInAdmin"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:scaleType="fitXY"
                android:layout_width="100dp"
                android:layout_height="200dp"
                android:src="@drawable/imagehome" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/linaer_Infor"
                app:layout_constraintStart_toEndOf="@+id/image_itemSanPhamInAdmin"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="8dp"
                android:gravity="start">

                <LinearLayout
                    android:id="@+id/linear_IDSanPhamInAdmin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ID Sản phẩm: "
                        android:textStyle="bold"
                        android:textColor="@color/bgimgedelete"
                        android:textSize="24dp"
                        android:layout_gravity="end"
                        android:layout_marginEnd="10dp" />

                    <TextView
                        android:id="@+id/textView_IDSanPhamInAdmin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textColor="@color/bgimgedelete"
                        android:textSize="24dp"
                        android:textStyle="bold"
                        android:layout_gravity="end"
                        android:layout_marginEnd="12dp"
                        android:layout_marginStart="8dp" />



                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_IDNguoiMuaInAdmin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ID Người mua: "
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="24dp"
                        android:layout_gravity="end"
                        android:layout_marginEnd="10dp" />

                    <TextView
                        android:id="@+id/textView_IDNguoiMuaInAdmin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textColor="@color/black"
                        android:textSize="24dp"
                        android:textStyle="bold"
                        android:layout_gravity="end"
                        android:layout_marginEnd="12dp"
                        android:layout_marginStart="8dp" />



                </LinearLayout>

                <TextView
                    android:id="@+id/textView_TenSanPhamInAdmin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Áo thun ngắn tay"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="24dp" />

                <LinearLayout
                    android:id="@+id/linear_GiaKhuyenMaiInAdmin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/textView_TenSanPhamInAdmin"
                    app:layout_constraintStart_toStartOf="parent">

                    <TextView
                        android:id="@+id/textView_GiaKhuyenMaiInAdmin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="350.000"
                        android:textColor="@color/black"
                        android:textSize="24dp"
                        android:textStyle="bold"
                        android:layout_gravity="end"
                        android:layout_marginEnd="12dp"
                        android:layout_marginStart="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="VND"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="24dp"
                        android:layout_gravity="end"
                        android:layout_marginEnd="10dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_KichCoInAdmin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/textView_TenSanPhamInAdmin"
                    app:layout_constraintStart_toStartOf="parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kích cỡ: "
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="24dp"
                        android:layout_gravity="end"
                        android:layout_marginEnd="10dp" />

                    <TextView
                        android:id="@+id/textView_KichCoInAdmin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="M"
                        android:textColor="@color/black"
                        android:textSize="24dp"
                        android:textStyle="bold"
                        android:layout_gravity="end"
                        android:layout_marginEnd="12dp"
                        android:layout_marginStart="8dp" />



                </LinearLayout>


                <LinearLayout
                    android:id="@+id/linear_MauSacInAdmin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/textView_TenSanPhamInAdmin"
                    app:layout_constraintStart_toStartOf="parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Màu sắc: "
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="24dp"
                        android:layout_gravity="end"
                        android:layout_marginEnd="10dp" />

                    <TextView
                        android:id="@+id/textView_MauSacInAdmin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đen"
                        android:textColor="@color/black"
                        android:textSize="24dp"
                        android:textStyle="bold"
                        android:layout_gravity="end"
                        android:layout_marginEnd="12dp"
                        android:layout_marginStart="8dp" />



                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_SoLuongInAdmin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/textView_TenSanPhamInAdmin"
                    app:layout_constraintStart_toStartOf="parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Số lượng: "
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="24dp"
                        android:layout_gravity="end"
                        android:layout_marginEnd="10dp" />

                    <TextView
                        android:id="@+id/textView_SoLuongInAdmin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:textColor="@color/black"
                        android:textSize="24dp"
                        android:textStyle="bold"
                        android:layout_gravity="end"
                        android:layout_marginEnd="12dp"
                        android:layout_marginStart="8dp" />



                </LinearLayout>


                <LinearLayout
                    android:id="@+id/linear_TinhTrangHienTaiInAdmin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/textView_TenSanPhamInAdmin"
                    app:layout_constraintStart_toStartOf="parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TTHT: "
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="24dp"
                        android:layout_gravity="end"
                        android:layout_marginEnd="10dp" />

                    <TextView
                        android:id="@+id/textView_TinhTrangHienTaiInAdmin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chưa xác nhận"
                        android:textColor="@color/black"
                        android:textSize="24dp"
                        android:textStyle="bold"
                        android:layout_gravity="end"
                        android:layout_marginEnd="12dp"
                        android:layout_marginStart="8dp" />



                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_ThoiGianDatInAdmin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/linear_GiaKhuyenMaiInAdmin"
                    app:layout_constraintStart_toStartOf="parent">

                    <TextView
                        android:id="@+id/textView_ThoiGianDatInAdmin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2023-11-26 10:57:19"
                        android:textColor="@color/black"
                        android:textSize="24dp"
                        android:textStyle="italic"
                        android:layout_gravity="end"
                        android:layout_marginEnd="12dp"
                        android:layout_marginStart="8dp" />
                </LinearLayout>




            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>