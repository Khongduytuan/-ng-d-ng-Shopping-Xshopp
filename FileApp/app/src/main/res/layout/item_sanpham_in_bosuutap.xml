<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="12dp"
    android:padding="8dp"
    android:layout_marginVertical="8dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="false"
        app:cardCornerRadius="15dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/image_itemSanPhamInBoSuuTap"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:src="@drawable/imagehome"/>
            <TextView
                android:layout_marginStart="2dp"
                android:id="@+id/textView_TenSanPhamInBoSuuTap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Áo thun ngắn tay"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_below="@id/image_itemSanPhamInBoSuuTap"
                android:textSize="24dp"
                />
            <LinearLayout
                android:id="@+id/linear_GiaHienTai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/textView_TenSanPhamInBoSuuTap"
                >
                <TextView

                    android:id="@+id/textView_Gia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="400.000"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="italic"
                    android:layout_gravity="end"
                    android:layout_marginEnd="12dp"
                    android:layout_marginStart="8dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VND"
                    android:textStyle="italic"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:layout_gravity="end"
                    android:layout_marginEnd="10dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_GiaKhuyenMai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/linear_GiaHienTai"
                >
                <TextView
                    android:id="@+id/textView_GiaKhuyenMai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="350.000"
                    android:textColor="@color/bgimgedelete"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_gravity="end"
                    android:layout_marginEnd="12dp"
                    android:layout_marginStart="8dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="VND"
                    android:textStyle="bold"
                    android:textColor="@color/bgimgedelete"
                    android:textSize="20dp"
                    android:layout_gravity="end"
                    android:layout_marginEnd="10dp"
                    />

            </LinearLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>