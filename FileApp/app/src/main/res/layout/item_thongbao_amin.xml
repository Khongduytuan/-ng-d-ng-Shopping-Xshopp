<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="8dp"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/backgroundapp"
            >


            <ImageView
                android:id="@+id/imageView_deleteThongBaoAdmin"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/icon_x"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="12dp"
                />
            <TextView
                android:layout_below="@id/imageView_deleteThongBaoAdmin"
                android:id="@+id/textView_itemTenThongBaoAdmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="black friday 2022"
                android:textSize="32dp"
                android:textStyle="bold"
                android:textColor="@color/bgimgedelete"
                />



            <TextView
                android:layout_below="@id/textView_itemTenThongBaoAdmin"
                android:id="@+id/textView_itemNoiDungThongBaoAdmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Giảm giá sâu tất cả các mặt hàng"
                android:textSize="28dp"
                android:textColor="@color/black"
                android:textStyle="italic"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>



</RelativeLayout>