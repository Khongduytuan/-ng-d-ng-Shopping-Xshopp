<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_item_recycle"
    android:layout_marginHorizontal="12dp"
    android:padding="8dp"
    android:layout_marginVertical="8dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cardCornerRadius="18dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_itemSanPhamInTimKiem"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:scaleType="fitXY"
                android:layout_width="100dp"
                android:layout_height="200dp"
                android:src="@drawable/imagehome" />

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/linaer_Infor"
                app:layout_constraintStart_toEndOf="@+id/image_itemSanPhamInTimKiem"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:gravity="start">

                <TextView
                    android:id="@+id/textView_TenSanPhamInTimKiem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Áo thun ngắn tay"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="24dp" />

                <LinearLayout
                    android:id="@+id/linear_GiaHienTaiFromDanhMuc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/textView_TenSanPhamInTimKiem"
                    app:layout_constraintStart_toStartOf="parent">

                    <TextView
                        android:id="@+id/textView_GiaInTimKiem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="400.000"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:textStyle="italic"
                        android:layout_gravity="end"
                        android:layout_marginEnd="12dp"
                        android:layout_marginStart="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="VND"
                        android:textStyle="italic"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:layout_gravity="end"
                        android:layout_marginEnd="10dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_GiaKhuyenMaiInTimKiem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/linear_GiaHienTaiFromDanhMuc"
                    app:layout_constraintStart_toStartOf="parent">

                    <TextView
                        android:id="@+id/textView_GiaKhuyenMaiInTimKiem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="350.000"
                        android:textColor="@color/bgimgedelete"
                        android:textSize="24dp"
                        android:textStyle="bold"
                        android:layout_gravity="end"
                        android:layout_marginEnd="12dp"
                        android:layout_marginStart="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="VND"
                        android:textStyle="bold"
                        android:textColor="@color/bgimgedelete"
                        android:textSize="24dp"
                        android:layout_gravity="end"
                        android:layout_marginEnd="10dp" />

                </LinearLayout>


            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>