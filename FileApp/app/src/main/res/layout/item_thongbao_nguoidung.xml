<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="8dp"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/textView_itemTenThongBao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="black friday 2022"
                android:textSize="32dp"
                android:textStyle="bold"
                android:textColor="@color/bgimgedelete"
                />

            <TextView
                android:layout_below="@id/textView_itemTenThongBao"
                android:id="@+id/textView_itemNoiDungThongBao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Giảm giá sâu tất cả các mặt hàng"
                android:textSize="28dp"
                android:textColor="@color/black"
                android:textStyle="italic"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>



</RelativeLayout>